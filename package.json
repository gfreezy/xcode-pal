{
  "name": "xcode-pal",
  "displayName": "XCode Pal",
  "description": "Control Xcode from VS Code with seamless AppleScript integration - build, run, and open files",
  "version": "0.0.5",
  "publisher": "gfreezy",
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "xcode",
    "ios",
    "macos",
    "applescript",
    "build",
    "run",
    "integration"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gfreezy/xcode-pal.git"
  },
  "bugs": {
    "url": "https://github.com/gfreezy/xcode-pal/issues"
  },
  "homepage": "https://github.com/gfreezy/xcode-pal#readme",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xcode-pal.xcodeRun",
        "title": "Run Project in Xcode",
        "category": "Xcode Pal"
      },
      {
        "command": "xcode-pal.xcodeBuild",
        "title": "Build Project in Xcode",
        "category": "Xcode Pal"
      },
      {
        "command": "xcode-pal.openInXcode",
        "title": "Open Current File in Xcode",
        "category": "Xcode Pal"
      }
    ],
    "keybindings": [
      {
        "command": "xcode-pal.xcodeRun",
        "key": "ctrl+alt+r",
        "mac": "ctrl+alt+r"
      },
      {
        "command": "xcode-pal.xcodeBuild",
        "key": "ctrl+alt+b",
        "mac": "ctrl+alt+b"
      },
      {
        "command": "xcode-pal.openInXcode",
        "key": "ctrl+alt+x",
        "mac": "ctrl+alt+x",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
